{
	"editor.codeActionsOnSave": {
		"source.fixAll.tslint": true,
		"source.fixAll.eslint": true
	},
	"editor.formatOnSave": true,
	"cSpell.enabled": false,
	"editor.tabSize": 2,
	"[javascript]": {
		"editor.quickSuggestions": {
			"strings": true
		}
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"node_modules": true,
		".cache": true,
		"public": true,
		"content": true,
		".prettierrc": true,
		".editorconfig": true,
		".eslintrc": true,
		"package-lock.json":true
	}
}
